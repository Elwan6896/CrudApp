@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Privacy Policy</h3>
                </div>
                <div class="card-body">
                    <p>
                        This application is a sample CRUD project built using <strong>ASP.NET Core 8 MVC</strong> and
                        <strong>Entity Framework Core</strong>.
                        We value your privacy and want you to understand how your information is used.
                    </p>
                    <ul>
                        <li>Your data is used for demonstration purposes only.</li>
                        <li>No data is shared with third parties.</li>
                        <li>All input is stored locally in the application database.</li>
                    </ul>

                    <hr class="my-4" />

                    <h4>Contact Information</h4>
                    <p>If you have any questions or concerns, feel free to reach out:</p>
                    <ul class="list-unstyled">
                        <li><strong>Email:</strong> <a href="mailto:youremail@example.com">youremail@example.com</a>
                        </li>
                        <li><strong>Phone:</strong> +20 100 000 0000</li>
                        <li><strong>Address:</strong> Cairo, Egypt</li>
                    </ul>

                    <hr class="my-4" />

                    <h4>Contact Us</h4>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Your Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email">
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="4"
                                placeholder="Write your message here"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
